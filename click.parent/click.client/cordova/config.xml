<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Click</name>
    <preference name="Fullscreen" value="false" />
    <preference name="DisallowOverscroll" value="true"/>
    <platform name="android">
        <preference name="Orientation" value="sensorPortrait" />
    </platform>
    <author email="chamirkazhiyev@greet-go.com">
        Amirkazhiev Chingis
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-contacts" spec="1" />
    <plugin name="cordova-plugin-device" spec="1" />
    <plugin name="cordova-plugin-keyboard" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>


</widget>
