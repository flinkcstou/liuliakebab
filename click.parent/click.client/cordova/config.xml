<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets">
  <name>Click</name>
  <icon src="www/img/logo.png"/>
  <screen src="www/img/logo.png"/>
  <preference name="Fullscreen" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>

  <platform name="android">
    <preference name="Orientation" value="sensorPortrait"/>
    <allow-intent href="market:*"/>
    <preference name="android-minSdkVersion" value="14" />
    <icon src="resources/logo.png" density="ldpi"/>
    <icon src="resources/logo.png" density="mdpi"/>
    <icon src="resources/logo.png" density="hdpi"/>
    <icon src="resources/logo.png" density="xhdpi"/>
  </platform>

  <platform name="ios">
    <preference name="Orientation" value="sensorPortrait"/>
    <preference name="StatusBarBackgroundColor" value="#007AE2" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
    <icon src="resources/logo.png" density="ldpi"/>
    <icon src="resources/logo.png" density="mdpi"/>
    <icon src="resources/logo.png" density="hdpi"/>
    <icon src="resources/logo.png" density="xhdpi"/>
  </platform>
  <author email="chamirkazhiyev@greet-go.com">
    Amirkazhiev Chingis
  </author>
  <content src="index.html"/>
  <plugin name="cordova-plugin-whitelist"/>
  <plugin name="cordova-plugin-contacts"/>
  <plugin name="cordova-plugin-device"/>
  <plugin name="cordova-plugin-keyboard"/>
  <plugin name="cordova-plugin-screensize"/>
  <plugin name="cordova-plugin-statusbar"/>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>


</widget>
